<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cineapp.app.MovieDetails">

    <ImageView
        android:id="@+id/ivPosterImage"
        android:layout_width="1080px"
        android:layout_height="1920px"
        android:scaleType="fitXY"
        android:adjustViewBounds="false"
        android:src="@drawable/large_movie_poster"
        android:focusableInTouchMode="true" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000"
        android:alpha="0.75"
        android:layout_marginTop="900px">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="The Dark Knight"
            android:textSize="60px"
            android:layout_gravity="center_horizontal|top"
            android:textColor="#e7f1f3"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvCast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="Christian Bale, Joseph-Gordon Levitt"
            android:textSize="45px"
            android:layout_gravity="center"
            android:textColor="#9d9d9d"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px"
            android:text="2014"
            android:textSize="50px"
            android:layout_gravity="center_horizontal|top"
            android:textColor="#e7f1f3" />

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:id="@+id/imageView"
            android:src="@drawable/view"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="200px" />

        <TextView
            android:id="@+id/tvBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book it"
            android:textSize="50px"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="#e7f1f3"
            android:layout_marginBottom="80px" />
    </FrameLayout>

</RelativeLayout>
